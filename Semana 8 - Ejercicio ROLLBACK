CREATE TABLE Productos (
    ProductoID INT PRIMARY KEY,
    Nombre VARCHAR(50),
    Precio DECIMAL(10, 2)
);

INSERT INTO Productos (ProductoID, Nombre, Precio) VALUES
(1, 'Laptop', 1200.00),
(2, 'Monitor', 300.00),
(3, 'Teclado', 75.00);


SELECT * FROM Productos;
BEGIN TRANSACTION;

UPDATE Productos
SET Precio = Precio + 100.00
WHERE ProductoID = 1;

SELECT * FROM Productos;

ROLLBACK;

SELECT * FROM Productos;
